modules = ["php-8.2", "nodejs-20"]
[agent]
expertMode = true

[userenv]

[userenv.shared]
APP_NAME = "FinanceFlow"
APP_ENV = "local"
APP_DEBUG = "true"
APP_URL = "http://localhost"
DB_CONNECTION = "pgsql"
COMPANY_NAME = "FinanceFlow"
CURRENCY_CODE = "GBP"
CURRENCY_SYMBOL = "£"
PRIMARY_COLOR = "#2ca48b"
SECONDARY_COLOR = "#ffffff"
SESSION_DRIVER = "file"
CACHE_STORE = "file"
QUEUE_CONNECTION = "sync"
VITE_APP_NAME = "FinanceFlow"
VITE_PRIMARY_COLOR = "#2ca48b"
VITE_CURRENCY_SYMBOL = "£"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173
